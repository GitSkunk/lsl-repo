(load "~/emacs/xlsl-mode.elc")
(setq auto-mode-alist
       (nconc
         '(("\\.lsl$" . xlsl-mode))
         auto-mode-alist))

(defun my-reload-xlsl ()
  "Reload xlsl mode"
  (interactive)
  (unload-feature 'xlsl-mode)
  (load "~/emacs/xlsl-mode.elc")
)

(setq-default c-basic-offset 8
	      tab-width 8
	      indent-tabs-mode t
	      c-default-style "gnu")
(setq tags-revert-without-query 1)

